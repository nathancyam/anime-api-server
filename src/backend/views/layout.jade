doctype html
html(ng-app='AnimeApp')
    head
        title= title
        script(data-require="angular.js@*", src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.5/angular.min.js")
        script(data-require="angular.js@*", src="http://code.angularjs.org/1.3.0-beta.5/angular-resource.min.js")
        script(data-require="angular.js@*", src="http://code.angularjs.org/1.3.0-beta.5/angular-route.min.js")
        script(data-require="angular.js@*", src="http://code.angularjs.org/1.3.0-beta.5/angular-animate.min.js")
        script(data-require="angular.js@*", src="http://code.angularjs.org/1.3.0-beta.5/angular-cookies.min.js")
        script(src="/libs/ui-bootstrap-tpls-0.11.0.min.js")
        script(src="https://cdn.socket.io/socket.io-1.0.4.js")
        script(src='/js/animeapp.js')
        link(rel='stylesheet', href='/stylesheets/animate.css')
        link(rel='stylesheet', href='/stylesheets/css/main.css')
    body
        nav.navbar.navbar-default(role="navigation")
            div.navbar-inner
                div.container
                    button.navbar-toggle(data-toggle="collapse" ng-click="isCollapsed = !isCollapsed")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    div.navbar-header
                        a.navbar-brand(href="#") Anime Episode Application
                    div.nav-collapse(collapse="isCollapsed")
                        ul.nav.navbar-nav.navbar-left
                            li
                                a(href="#") Anime
                            li
                                a(href="#/torrents") Torrents
                        ul.nav.navbar-nav.navbar-right
                            li.dropdown
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Notifications
                                ul.dropdown-menu.notification-dropdown(role="menu")
                                    li
                                        notification-list
                                            notification-clear
                            li
                                a(href="#/settings") Settings

        div.container.anime-app
            div(notification-area)
            div.container(ng-view)
        footer
